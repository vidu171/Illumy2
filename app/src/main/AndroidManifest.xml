<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.illumy.illumy">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/dark_theme">
        <receiver android:name=".alarm_reciever">
            <intent-filter>
                <action android:name="com.illumy.action.alarm"></action>
                <action android:name="com.illumy.action.silent_1"></action>
                <action android:name="com.illumy.action.silent_2"></action>
            </intent-filter>
        </receiver>
        <receiver android:name=".complete_reciever" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/dark_theme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ring_profile_list"/>
        <activity android:name=".schedule_activity"/>
        <activity android:name=".sc_ring_activity"
            android:theme="@style/profile_theme"/>
    </application>

</manifest>